@model LPLMVC.Models.TeamDataModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4 card mx-auto">
        <form asp-action="Edit" class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TeamId" />
            <div class="form-group">
                <label asp-for="SchoolName" class="control-label"></label>
                <input asp-for="SchoolName" class="form-control" />
                <span asp-validation-for="SchoolName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player1" class="control-label"></label>
                <input asp-for="Player1" class="form-control" />
                <span asp-validation-for="Player1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player2" class="control-label"></label>
                <input asp-for="Player2" class="form-control" />
                <span asp-validation-for="Player2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player3" class="control-label"></label>
                <input asp-for="Player3" class="form-control" />
                <span asp-validation-for="Player3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player4" class="control-label"></label>
                <input asp-for="Player4" class="form-control" />
                <span asp-validation-for="Player4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player5" class="control-label"></label>
                <input asp-for="Player5" class="form-control" />
                <span asp-validation-for="Player5" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player6" class="control-label"></label>
                <input asp-for="Player6" class="form-control" />
                <span asp-validation-for="Player6" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player7" class="control-label"></label>
                <input asp-for="Player7" class="form-control" />
                <span asp-validation-for="Player7" class="text-danger"></span>
            </div>
            @if (User.IsInRole("Admin") && User.HasClaim("Edit Team", "Edit Team"))
            {
                <div class="form-group">
                    <label asp-for="Wins" class="control-label"></label>
                    <input asp-for="Wins" class="form-control" />
                    <span asp-validation-for="Wins" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Games" class="control-label"></label>
                    <input asp-for="Games" class="form-control" />
                    <span asp-validation-for="Games" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
