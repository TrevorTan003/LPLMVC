            <div class="form-group">
                <label asp-for="Player2" class="control-label"></label>
                <input asp-for="Player2" class="form-control" />
                <span asp-validation-for="Player2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player3" class="control-label"></label>
                <input asp-for="Player3" class="form-control" />
                <span asp-validation-for="Player3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player4" class="control-label"></label>
                <input asp-for="Player4" class="form-control" />
